<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <PackAsTool>true</PackAsTool>
        <ToolCommandName>CatPrinter</ToolCommandName>
        <PackageOutputPath>./nupkg</PackageOutputPath>

        <PackageId>DotnetToolExample</PackageId>
        <Version>1.0.2</Version>
        <Authors>Jakob Steng√•rd</Authors>
        <Company>Omegapoint</Company>
        <PackageDescription>Dotnet tool example project</PackageDescription>
        <RepositoryUrl>https://github.com/dabaus/DotnetToolExample/</RepositoryUrl>
        
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CommandLineParser" Version="2.9.1" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="nupkg" />
    </ItemGroup>

</Project>
